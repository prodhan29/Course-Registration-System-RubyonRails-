
<h2> Student email: <%= current_user.email %></h2>
<table class="table">
  <thead>
  <tr>
    <th>Course name</th>
    <th>code</th>
    <th>credit</th>
    <th>Result</th>
  </tr>
  </thead>
  <tbody>
  <% current_user.regdetails.each do |r|  %>
      <tr>
        <td> <%= get_course_name r.course %></td>
        <td> <%= get_course_code r.course %></td>
        <td> <%= get_course_credit r.course %> </td>
        <td> <%= get_result r.cgpa %></td>
      </tr>
  <% end %>
  </tbody>
</table>
<h1> Total Credits = <%= @total_credit %></h1>
<h1> CGPA = <%= @cgpa.round(2) %></h1>

</br>


