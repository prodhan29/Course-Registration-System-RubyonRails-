
<div class="field">
  <%= label_tag :semester_id %>
  <%= select_tag :semester_id, options_for_select(@semester_names), :onchange =>  "course_change()" %>
</div>

<div class="field">

  <div id="courses">
    <%= render 'course_list', :courses => courses, :update => true %>
  </div>
</div>

<% if edit_option %>
    <%= button_tag "update", :onclick => "update_registration()" %>
<% else %>
    <%= button_tag "submit", :onclick => "submit_registration()" %>
<% end %>





