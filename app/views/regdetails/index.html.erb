
<div class ="container">
  <div class ="jumbotron">
    <h2 style ="padding-left: 35%" >Registered Students</h2>
  </div>
  <table id = "usertable" class = "table">
    <thead>
      <tr>
        <th>User</th>
        <th>Semester</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @registered_users.each do |user| %>
        <tr>
          <td><%= link_to user.email, appuser_reg_details_path(id: user.id) %></td>
          <td> <%= get_user_semester user %> </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <br>
  <%= will_paginate @registered_users, renderer: BootstrapPagination::Rails %>
</div>

