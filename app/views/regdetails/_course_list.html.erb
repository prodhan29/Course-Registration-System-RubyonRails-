<table class="table">
  <thead>
  <tr>
    <th>Course name </th>
    <th>code</th>
    <th>credit </th>
    <th></th>
  </tr>
  </thead>
  <tbody>
<% courses.each_with_index do|c|%>

    <tr>
      <td> <%= label_tag c.name %></td>
      <td><bold> <%= label_tag c.code %> </bold></td>
      <td> <%= label_tag c.credit %>
      <% if update %>
          <td> <%= check_box_tag c.name, nil, check_course(c.id) ,:id => c.id%> </td>
      <% else %>
          <td> <%= check_box_tag c.name, nil,nil,:id => c.id %> </td>
      <% end %>

    </tr>
<%end%>
</tbody>
</table>


