


  <%= form_for course, :html => { :class => "form-horizontal" } do |f| %>
    <div class="form-group">
      <label class="control-label col-sm-2" for="email">Name</label>
      <div class="col-sm-4">

        <%= f.text_field :name ,class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <label class="control-label col-sm-2" for="pwd">Code</label>
      <div class="col-sm-4">
        <%= f.text_field :code ,class:"form-control"%>
      </div>
    </div>
    <div class="form-group">
      <label class="control-label col-sm-2" for="pwd">Credit</label>
      <div class="col-sm-4">
        <%= f.text_field :credit ,class:"form-control"%>
      </div>
    </div>
    <div class="form-group">
      <label class="control-label col-sm-2" for="pwd">Semester</label>
      <div class="col-sm-4">
        <%= select_tag :semester, options_for_select(@semesters),class:"form-control" %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <%= f.submit 'submit', :class=> 'btn btn-default' %>
      </div>
    </div>
<% end %>
